<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linck.management.system.mapper.SysUserMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , account, pwd, status, create_time, update_time
    </sql>

    <!-- 不返回密码 -->
    <select id="listWithSearch" resultType="com.linck.management.system.model.entity.SysUser"
            parameterType="com.linck.management.system.model.dto.SysUserSearchDto">
        select id, account, status,create_time, update_time from sys_user
        <where>
            <if test="account != null and account != ''">
                and account = #{account}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        order by update_time desc
    </select>
</mapper>
