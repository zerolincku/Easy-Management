<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linck.management.system.mapper.SysUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.linck.management.system.model.entity.SysUser">
        <id column="id" property="id"/>
        <result column="account" property="account"/>
        <result column="pwd" property="pwd"/>
        <result column="state" property="state"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , account, pwd, state, create_time, update_time
    </sql>

    <!-- 不返回密码 -->
    <select id="listWithSearch" resultMap="BaseResultMap"
            parameterType="com.linck.management.system.model.dto.SysUserSearchDTO">
        select id, account, state,create_time, update_time from sys_user
        <where>
            <if test="account != null and account != ''">
                and account = #{account}
            </if>
            <if test="state != null">
                and state = #{state}
            </if>
        </where>
        order by update_time desc
    </select>
</mapper>
