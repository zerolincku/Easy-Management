<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linck.management.system.mapper.SysUserRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.linck.management.system.model.entity.SysUserRole">
        <id column="id" property="id"/>
        <result column="u_id" property="uId"/>
        <result column="r_id" property="rId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , u_id, r_id
    </sql>

    <insert id="insertList" parameterType="java.util.List" useGeneratedKeys="false">
        insert into sys_user_role (u_id,r_id) values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.uId},
            #{item.rId}
            )
        </foreach>
    </insert>
</mapper>
